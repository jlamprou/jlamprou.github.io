    {
      "@context": "https://schema.org",
      "@type": "ResearchProject",
      "name": "AI Research Network - Ioannis Lamprou",
      "description": "Academic research network and collaborations in Artificial Intelligence, Machine Learning, and Cybersecurity",
      "researcher": {
        "@type": "Person",
        "name": "Ioannis Lamprou",
        "alternateName": "John Lamprou",
        "affiliation": [
          {
            "@type": "CollegeOrUniversity",
            "name": "Technical University of Crete",
            "location": "Greece"
          },
          {
            "@type": "Organization", 
            "name": "Parasecurity Group"
          }
        ]
      },
      "about": [
        "Large Language Models",
        "Natural Language Processing", 
        "Machine Learning",
        "Cybersecurity",
        "Social Media Analysis",
        "Bot Detection",
        "Artificial Intelligence"
      ],
      "location": {
        "@type": "Place",
        "name": "Greece"
      }
    }
    </script>
  </main>
</Layout>