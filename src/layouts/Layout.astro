---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="Ioannis Lamprou, John Lamprou, AI Engineer, Machine Learning, NLP, Research, Parasecurity, TUC, Crete" />
    <meta name="author" content="Ioannis Lamprou" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jlamprou.github.io/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://jlamprou.github.io/me.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://jlamprou.github.io/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://jlamprou.github.io/me.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://jlamprou.github.io/" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Ioannis Lamprou",
        "alternateName": ["John Lamprou"],
        "jobTitle": "AI R&D Engineer",
        "description": "AI R&D Engineer and MSc Candidate specializing in Machine Learning, NLP and AI",
        "url": "https://jlamprou.github.io",
        "image": "https://jlamprou.github.io/me.png",
        "email": "glamprou26@protonmail.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Heraklion",
          "addressRegion": "Crete",
          "addressCountry": "Greece"
        },
        "affiliation": {
          "@type": "Organization",
          "name": "Technical University of Crete",
          "url": "https://parasecurity.edu.gr"
        },
        "sameAs": [
          "https://linkedin.com/in/ioannis-lamprou-478b1b223/",
          "https://github.com/jlamprou"
        ]
      }
    </script>

    <title>{title}</title>
  </head>

  <body class="relative text-black dark:text-white">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-100 dark:bg-neutral-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }
</style>
